<%- include('../partials/admin/header.ejs') %>

<%- include('../partials/admin/nav.ejs') %>


<main class="container">
    <div class="row justify-content-center">
        <section class="col-6 mt-5">
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-info"><%= el.msg %></div>
                <% }) %>    
            <% } %>

            
            <form action="/admin/createProduct" enctype="multipart/form-data" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Name of Product" name="name">
                    <label for="floatingInput">Name</label>
                  </div>

                  <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Description of Product" name="description">
                    <label for="floatingInput">Description</label>
                  </div>

                  <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="floatingInput" placeholder="Price of Producgt" name="price">
                    <label for="floatingInput">Price</label>
                  </div>

                  <div class="mb-3">
                    <label for="imgUpload" class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageUpload" name="file">
                  </div>

                  <div class="form-floating mb-3">
                    <select class="form-select" id="floatingInput" name="productCategory">
                        <option>Select Product Category</option>
                        <option value="Funitures">Funitures</option>
                        <option value="Shoes">Shoes</option>
                        <option value="Phone">Phone</option>
                        <option value="Cloths">Cloths</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Utensils">Utensils</option>
                    </select>
                    
                  </div>

                  

                <button type="submit" class="btn btn-outline-primary pull-right">Create Product</button>
              </form>
        </section>
    </div>
</main>






<%- include('../partials/admin/footer.ejs') %>